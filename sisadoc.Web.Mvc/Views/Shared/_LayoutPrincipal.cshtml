<script>
      function DirMenu(id) {


          $.ajax({
              //   url: MasterURL + "Archivos/CopiarPruebas/?opcionId=" + id + ", uio=1",
              url: "@Url.Action("UrlMenu", "logOn")",
            type: "GET",
            async: true,
            data: {
                opcionId: id

            },
            context: document.body,
            cache: false,
            success: function (redirect) {


                window.location.href = redirect
            }

        });

      };
      function mostrar() {
          document.getElementById("menu-id").style.width = "300px";
          document.getElementById("menu-id").style.marginLeft = "300px";
          document.getElementById("menu-id").style.transition = " margin-left .5s";
          document.getElementById("abrir").style.display = "none";
          document.getElementById("cerrar").style.display = "inline";
          document.getElementById("id-content").style.marginLeft = "300px";
          document.getElementById("id-content").style.transition = "marginLeft .5s";
      }
      function ocultar() {
          document.getElementById("menu-id").style.width = "-300px";
          document.getElementById("menu-id").style.marginLeft = "-300px";
          document.getElementById("menu-id").style.transition = " margin-left .5s";
          document.getElementById("cerrar").style.display = "none";
          document.getElementById("abrir").style.display = "inline";
          document.getElementById("id-content").style.marginLeft = "0px";
          document.getElementById("id-content").style.transition = "marginLeft .5s";
      }
</script>

